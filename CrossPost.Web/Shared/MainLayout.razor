@inherits LayoutComponentBase
<MudLayout>
    <MudAppBar Elevation="1" Class="bg-info" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Color="Color.Inherit">CrossPost</MudText>
        <MudAppBarSpacer />
    </MudAppBar>
    <MudDrawer ClipMode="DrawerClipMode.Docked" @bind-Open="_drawerOpen" Elevation="1" Color="Color.Inherit">
        <MudDrawerHeader Class="bg-info d-block justify-center">
            <img class="img-fluid mx-auto my-auto" src="/images/logo.png" />
        </MudDrawerHeader>
        <MudDivider/>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
            @Body
            <MudScrollToTop>
                <MudFab Class="bg-info" Icon="@Icons.Filled.ArrowUpward" />
            </MudScrollToTop>
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}