@inherits LayoutComponentBase
<MudLayout>
    <MudAppBar Color="Color.Info">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Color="Color.Inherit">CrossPost</MudText>
        <MudAppBarSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" Color="Color.Info">
        <MudDrawerHeader>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Icon="@Icons.Filled.Dashboard" IconColor="Color.Inherit" Href="/dashboard">Dashboard</MudNavLink>
            <MudNavGroup Icon="@Icons.Filled.Settings" IconColor="Color.Inherit"  Title="Settings" Expanded="true">
                <MudNavLink Icon="@Icons.Filled.AccountBox" IconColor="Color.Inherit" Href="/users">Users</MudNavLink>
                <MudNavLink Icon="@Icons.Filled.Security" IconColor="Color.Inherit" Href="/security">Security</MudNavLink>
            </MudNavGroup>
            <MudNavLink Icon="@Icons.Filled.Info" IconColor="Color.Inherit" Href="/about">About</MudNavLink>
            <MudNavLink Icon="@Icons.Filled.ExitToApp" IconColor="Color.Inherit" Href="/exit">Exit</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
            <MudContainer Fixed="true">
                @Body
            </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}